{% extends 'base.html.twig' %}

{% block title %}Listing des utilisateurs{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
        {% endblock %}
{% block body %}
    <div id = "index-users">
    <h1>Listing des activités</h1>
<button class ="btn-add" onclick="window.location.href='{{ path('app_activity_new') }}'">Ajouter une nouvelle activité</button>
    <br>
    <table class="table table-striped table-index-users">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.name }}</td>
                <td>{{ activity.duration }}</td>
                <td>
                   <button class = "btn-infos btn-secondary" onclick="window.location.href='{{ path('app_activity_show', {'id': activity.id}) }}'">Infos</a>
                    <button class = "btn-edit btn-secondary" onclick="window.location.href='{{ path('app_activity_edit', {'id': activity.id}) }}'">Éditer</a>
                    {{ include('activity/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'activités créées !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
