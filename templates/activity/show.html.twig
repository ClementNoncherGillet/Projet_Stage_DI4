        {% endblock %}
{% block title %}Activité{% endblock %}

{% block body %}
<div id ="show-user">
    <h1>Informations de l'activité {{ activity.id }}</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.activityname }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ activity.duration }}</td>
            </tr>
            <tr>
                <th>Circuits liés</th>
                 
                    {% for circuit in activity.circuits %}
                    <td for="scales">{{circuit}}</td>
                {% else %}
                <td> Pas de circuits liés ! </td    <>
                {% endfor %}
            </tr>
        </tbody>
    </table>

