{% extends 'base.html.twig' %}

{% block title %}Listing des utilisateurs
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
	<link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
	<link rel="stylesheet" href="{{ asset('CSS/User/EditUser.css') }}">
	<script src="js/User/user.js"></script>
	<script src="js/jquery-3.6.0.js"></script>
	<script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>

{% endblock %}
{% block body %}
	<div id="index-users">
		<h1>Listing des utilisateurs</h1>
		<button class="btn-add" onclick="addUser()">Ajouter un nouvel utilisateur</button>
		<table class="table table-striped table-index-users">
			<thead>
				<tr>
					<th>Id</th>
					<th>Username</th>
					<th>Roles</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.username }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>
							<button type="button" class="btn-edit btn-secondary" onclick="editUser('{{ user.id }}', '{{ user.username }}' )">Éditer</button>
							<form method="post" action="{{ path('UserDelete', {'id': user.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cet utilisateur ?');">
								<input type="hidden" name="user" value="{{ user.id }}">
								<button class="btn-delete btn-secondary">Supprimer</button>
							</form>
						</td>
					</tr>


				{% else %}
					<tr>
						<td colspan="5">Pas d'utilisateurs créés !</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<!-- add-user-modal -->

		<div class="modal" id="add-user-modal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h2 class="modal-title">Ajouter un utilisateur</h2>
					</div>
					<form action="{{ path('UserAdd') }}" method="post">
						<div class="modal-body">
							<div>
								<label for='usernameAdd'>
									Nom d'utilisateur
								</label>
								<input type='text' oninput="usernameTestNew()" required="required" name='usernameAdd' id="usernameAdd">

								<p1 id="ErrorUser">
									Nom d'utilisateur deja pris</p1>

							</div>
							<div>
								<input type="hidden" id="userList" name="userList" value="{{ listeUser.content }}">
							</div>

							<div>
								<label for='passwordAdd'>
									Mot de passe Temporaire
								</label>
								<input type='passwordAdd' required="required" name='passwordAdd'>
							</div>

							<div>
								<label for='roleAdd'>
									Roles
								</label>
								<select name="roleAdd" id="roleAdd" required="required">
									<option value="">--Choissisez le role de l'utilisateur--</option>
									<option value="Admin">Admin</option>
									<option value="Editeur">Editeur</option>
									<option value="Visiteur">Visiteur</option>
								</select>
							</div>
							<br>
							<button type="button" class="btn-consult btn-secondary" onclick="window.location.href='{{ path('User') }}'">Consulter les utilisateurs</button>
							<button type="submit" id="buttonConfirmAdd" class="btn-valide btn-secondary">
								Ajouter
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>


		<!-- edit-user-modal -->

		<div class="modal" id="edit-user-modal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h2 class="modal-title">Modifier un utilisateur</h2>
					</div>
					<form action="{{ path('UserEdit') }}" method="post">
						<div class="modal-body">
							<input type="hidden" name="iduserEdit" id="iduserEdit">
							<div>
								<label for='usernameEdit'>
									Nom d'utilisateur
								</label>
								<input type='text' oninput="usernameTestEdit()" value="" name='usernameEdit' id='usernameEdit'>
								<p1 id="ErrorUserEdit">
									Nom d'utilisateur deja pris</p1>
								<div>
									<input type="hidden" id="userList" name="userList" value="{{ listeUser.content }}">
								</div>

							</div>
							<div>
								<label for='passwordEdit'>
									Nouveau mot de passe temporaire
								</label>
								<input type='passwordEdit' required="required" name='passwordEdit' id='passwordEdit'>
							</div>
							<div>
								<label for='roleEdit'>
									Roles
								</label>
								<select name="roleEdit" id="roleEdit" required="required">
									<option value="">--Choissisez le role de l'utilisateur--</option>
									<option value="Admin">Admin</option>
									<option value="Editeur">Editeur</option>
									<option value="Visiteur">Visiteur</option>

								</select>
							</div>

							<br>

							<button type="button" class="btn-consult btn-secondary" onclick="window.location.href='{{ path('User') }}'">Consulter les utilisateurs</button>
							<button type="submit" id="buttonConfirmEdit" class="btn-valide btn-secondary">
								Modifier
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>

	{% endblock %}
