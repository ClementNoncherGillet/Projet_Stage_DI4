{% extends 'base.html.twig' %}

{% block title %}Listing des circuits{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
        <link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
        <script src="js/Circuit/circuit.js"></script>
        <script src="js/jquery-3.6.0.js"></script>
        <script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>
  
{% endblock %}

{% block body %}
    <div id = "index-users">
    <h1>Listing des circuits</h1>
    <button type="button" class ="btn-add" onclick="addCircuit()">Ajouter un nouveau parcours</button>
    <br>
    <table class="table table-striped table-index-users">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %}
            <tr>
                <td>{{ circuit.id }}</td>
                <td>{{ circuit.circuitname }}</td>

                <td>
                    <button class = "btn-infos btn-secondary" onclick="window.location.href='{{ path('app_circuit_show', {'id': circuit.id}) }}'">Infos</a>
                    
                    <button class = "btn-edit btn-secondary" onclick="window.location.href='{{ path('app_circuit_edit', {'id': circuit.id}) }}'">Éditer</a>
                        {{ include('circuit/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de parcours créés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- add-patient-modal -->

<div class="modal" id="add-circuit-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Ajouter un parcours</h2>
      </div>
      <form action="{{ path('app_circuit_new') }}" method="post">
        <div class="modal-body">
            <div>
                <label for='name'> Nom du parcours </label>
                <input type='text' name='circuitname'>
            </div>
            <div>
                <label for='duration'> Type du parcours </label>
                <input type='text' name='circuittype'>
            </div>
            <div>
                <label for='duration'> Nombre de fois par jour ciblé </label>
                <input type='text' name='target'>
            </div>

            <fieldset id="fs-add-activity">
            <legend>Choisissez les activités de votre parcours</legend>
        
            <div id="select-container"> 
            
                <select style="display:none;" class="select-activity-sample" class="slct-add-activity" > 

                    {% for activity in activities %} 
                        <option value="{{ activity.id }}"> {{ activity }} </option>
                    {% else %}
                        <p> Pas d'activités créées ! </p>
                    {% endfor %}

                </select>


            </div>

            <button type="button" id='btn-add-activity' onclick="handleAddActivity()"> <b> Ajouter </b> </button> 

        </fieldset>

            <br>

            <button type="button" class="btn-consult btn-secondary" onclick="window.location.href='{{ path('index_circuits') }}'">Consulter les activités</button>
            <button type="submit" class="btn-valide btn-secondary"> Ajouter </button>
        </div>
	    </form>
    </div>
  </div>
</div>
</div>
{% endblock %}
