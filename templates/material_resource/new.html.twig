<!-- new-activity-modal -->

<div class="modal" id="new-human-resource-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Ajouter la ressource humaine <span id="show-title"></span></h2>
            </div>

            <form action="{{ path('app_human_resource_new') }}" method="POST">
              <div class="modal-body">
                  <div>
                      <label for='name'> Nom </label>
                      <input type='text' name='name'>
                  </div>
                  <div>
                     <input type="radio" id="dispo" name="availability" value="dispo" checked>
                    <label for="dispo">Disponible</label>
                    </div>

                     <div>
                    <input type="radio" id="indispo" name="availability" value="indispo">
                    <label for="indispo">Indisponible</label>
                    </div>
              </div>
              <br>
              <div class="modal-footer">
                  <button  type="submit" class="btn-valide btn-secondary"> Ajouter </button>
              </div>
          </form>
        </div>
    </div>
</div>