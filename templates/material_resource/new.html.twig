<!-- new-activity-modal -->

<div class="modal" id="new-human-resource-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Ajouter la ressource humaine <span id="show-title"></span></h2>
            </div>

            <form action="{{ path('app_human_resource_new') }}" method="POST">
              <div class="modal-body">
                  <div>
                      <label for='name'> Nom </label>
                      <input type='text' name='name'>
                  </div>
                  <div>
                      <input type="checkbox" id="availability" name="availability" value="availability">
                      <label for="availability">La ressource est-elle disponible actuellement ?</label>
                  </div>
              </div>
              <br>
              <div class="modal-footer">
                  <button  type="submit" class="btn-valide btn-secondary"> Ajouter </button>
              </div>
   
          </form>
       
        </div>
    </div>
</div>