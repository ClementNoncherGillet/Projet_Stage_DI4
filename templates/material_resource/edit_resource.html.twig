{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
{% endblock %}
<div class="modal" id="edit--material-resource-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Éditer une ressource matérielle</h2>
            </div>
            <form id = "edit-form-resource" action="{{ path('MaterialResourceEdit') }}" method="post">
                <div class="modal-body">
                    <input style="display:none;" name="nbcategory" id="edit--nbcategory">
                    <input style="display:none;" name="id" id="edit--resourceid">
                    <div class='flex-row'>
                        <div class="form-field-label flex-col">
                            <h4><label for='name'> Nom de la ressource </label></h4>
                        </div>

                        <div class="form-field-input flex-col">
                            <input  required="required" id='edit--resourcename' type='text' name='resourcename' onchange='edit__disableSubmit()'>
                        </div>
                    </div> 

                    <fieldset id="fs-add-material-category">
                        <legend>Choisissez les catégories de votre ressource</legend>
                
                         <div id="edit--categories-container"> 
                                {% for material_resource_category in material_resources_categories %} 
                                <div>
                                <input value = '{{material_resource_category.id }}'type="checkbox" id="category" name="category">
                                <label id = "lbl-category" for="category">{{ material_resource_category.categoryname }}</label>
                                </div>
                                {% else %}
                                    <p> Pas de catégories créées ! </p>
                                {% endfor %}
                            </div>
                    </fieldset>
                </div>
                <div class="modal-footer">
                
                    <button type="button" class="btn-delete btn-secondary" onclick="hideEditModalForm()">Annuler</button>
                    <button type='button' onclick="edit__verifyChanges()" class="btn-consult btn-secondary"> Ajouter  </button>
                    <button id = 'btn-none-edit-resource' style = "display : none" type = "submit"></button>
                </div>
    	    </form>
        </div>
    </div>
</div>
