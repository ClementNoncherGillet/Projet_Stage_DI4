<!DOCTYPE html>

{% block body %}
<head>
  <title>Connexion</title>
  <!--<script type="text/javascript" src="{{ asset('js/connexion/connexion.js') }}" defer></script>-->
</head>

<h1>Connexion</h1>

<form id="login-form" method="post">
  <!-- Email input -->
  <div>
    <input type="text" name="username" required="required" id="username" class="form-control" />
    <label>Identifiant</label>
  </div>

  <!-- Password input -->
  <div>
    <input type="password" name="password" required="required" id="password" class="form-control" />
    <label>Mot de passe</label>
  </div>

  <!-- Submit button -->
  <button
    type="submit"
    id="submit_button"
    class="btn btn-primary btn-block mb-4"
  >
    Connexion
  </button>
</form>

<p>
  {{ message }}
</p>

{% endblock %}
