<div class="modal" id="edit--pathway-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Éditer un parcours</h2>
            </div>
            <form action="{{ path('PathwayEdit') }}" method="post">
                <div class="modal-body">
                    <!-- input invisible (juste pour passer le nb d'activité dans la requete -->
                    <input style="display:none;" name="nbactivity" id="edit--nbactivity">
                    <input style="display:none;" name="nbactivity-toedit" id="edit--nbactivity-toedit">
                    <input style="display:none;" name="pathwayid" id="edit--pathwayid">


                    <div class="flex-col"> 
                        <label class="label" for='name'> Nom du parcours </label>
                        <input class="input" id='edit--pathwayname' type='text' name='pathwayname' onchange='edit__disableSubmit()'>
                    </div>

                    <fieldset id="fs-add-activity">
                        <h4>Choisissez les activités de votre parcours</h4>

                        <div id="edit--activities-container">

                        </div>

                        <button type="button" id='btn-add-activity' onclick="edit__handleAddActivity()"> <b> Ajouter </b> </button> 

                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-delete btn-secondary" onclick="hideEditModalForm()">Annuler</button>
                    <button type='button' onclick="edit__verifyChanges()" class="btn-consult btn-secondary"> Verrouiller les modifications  </button>
                    <button id='edit--submit' type="submit" class="btn-valide btn-secondary" disabled> Ajouter </button>
                </div>
    	    </form>
        </div>
    </div>
</div>
