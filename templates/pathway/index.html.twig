{% extends 'base.html.twig' %}

{% block title %}Liste des parcours{% endblock %}

{% block javascripts %}
  <script src="js/Pathway/pathway.js"></script>
        <script src="js/jquery-3.6.0.js"></script>
        <script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>
        <script src="js/Pathway/EditForm.js"> </script>
        <script src="js/Pathway/pathway.js"> </script>
        
{% endblock %}

{% block stylesheets %}
       <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
        <link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
        <link rel="stylesheet" href="{{ asset('CSS/Global/Modal.css') }}">
{% endblock %}

{% block body %}

    <script> 
    /* Script permettant de remplir dans le js un tableau qui contient toutes les activités des pathway

        Pour accéder a une activité d'un pathway :
        On a :
        activitiesByPathways.idPathway => id du pathway 
        activitiesByPathways.activities => liste d'activites lié au pathway
        Puis : 
        activitiesByPathways[index du pathway].activities[index de l'activité que l'on cherche].idActivity => id de l'activité
        activitiesByPathways[index du pathway].activities[index de l'activité que l'on cherche].name => nom de l'activité
        activitiesByPathways[index du pathway].activities[index de l'activité que l'on cherche].duration => durée de l'activité
    */
        var activitiesByPathways = new Array();
        {% if (activitiesByPathways) %}
            {% for indexPathway in 0..(activitiesByPathways|length - 1) %}
                activitiesByPathways[{{indexPathway}}] = new Object();
                activitiesByPathways[{{indexPathway}}].idPathway = '{{ pathways[indexPathway].id }}'
                //console.log('{{ pathways[indexPathway].id }}')
                activitiesByPathways[{{indexPathway}}].activities = new Array();
                
                {% if (activitiesByPathways[indexPathway]) %}
                    {% for indexActivity in 0..(activitiesByPathways[indexPathway]|length - 1) %}

                        activitiesByPathways[{{indexPathway}}].activities[{{indexActivity}}] = new Object();
                        activitiesByPathways[{{indexPathway}}].activities[{{indexActivity}}].idActivity = '{{ activitiesByPathways[indexPathway][indexActivity].id }}'
                        activitiesByPathways[{{indexPathway}}].activities[{{indexActivity}}].name = '{{ activitiesByPathways[indexPathway][indexActivity].activityname }}' 

                        activitiesByPathways[{{indexPathway}}].activities[{{indexActivity}}].duration = '{{ activitiesByPathways[indexPathway][indexActivity].duration }}'

                    {% else %}
                    {% endfor %}
                {% endif %}

            {% else %}
            {% endfor %}
        {% endif %}

    </script> 

    {# la div.index est la div qui contient la page a côté du menu #}
    <div class="index">


    <h1>Liste des parcours</h1>
    <button type="button" class ="btn-add" onclick="location.href='pathway/add'">Ajouter un nouveau parcours</button>
    <br>
    <table class="table table-striped table-index-users">
    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% set indexPathway = 0 %}
        {% for pathway in pathways %}
            <tr>
                <td> {{ pathway.id }} </td>
                <td> {{ pathway.pathwayname }} </td>

                <td>
                    <button class = "btn-infos btn-secondary" onclick="showInfosPathway('{{pathway.id}}', '{{pathway.pathwayname}}')">Informations</a>
                    <button class = "btn-edit btn-secondary" onclick="showEditModalForm('{{pathway.id}}', '{{pathway.pathwayname}}', '{{indexPathway}}')">Éditer</a>
                    <form action="{{ path('PathwayDelete') }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" style="width:100%;">
                        <input type="hidden" value="{{pathway.id}}" name="pathwayid">
                        <button type="submit" class="btn-delete btn-secondary" > <p style="margin:0px;"> Supprimer </p> </button>
                    </form>
                </td>
            </tr>
            {% set indexPathway = indexPathway + 1 %}

        {% else %}
            <tr>
                <td colspan="3">Pas de parcours créés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Fenêtre modale d'ajout 
    {{ include ('pathway/modal_new.html.twig') }}#}
    {# Fenêtre modale d'édition #}
    {{ include ('pathway/modal_edit.html.twig') }}
    {# Fenêtre modale d'information #}
    {{ include ('pathway/show.html.twig') }}


{% endblock %}
