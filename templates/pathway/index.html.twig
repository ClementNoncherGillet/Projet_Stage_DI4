{% extends 'base.html.twig' %}

{% block title %}Listing des parcours{% endblock %}

{% block stylesheets %}
        <script src="js/Pathway/pathway.js"></script>
        <script src="js/jquery-3.6.0.js"></script>
        <script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
        <link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
{% endblock %}

{% block body %}
    <div id = "index-users">
    <h1>Listing des parcours</h1>
    <button type="button" class ="btn-add" onclick="showNewModalForm()">Ajouter un nouveau parcours</button>
    <br>
    <table class="table table-striped table-index-users">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pathway in pathways %}
            <tr>
                <td>{{ pathway.id }}</td>
                <td>{{ pathway.pathwayname }}</td>
                {#<td>{{ pathway.pathwaytype }}</td>#}
                <td>
                    <button class = "btn-infos btn-secondary" onclick="window.location.href='{{ path('app_circuit_show', {'id': pathway.id}) }}'">Infos</a>
                    
                    <button class = "btn-edit btn-secondary" onclick="window.location.href='{{ path('app_circuit_edit', {'id': pathway.id}) }}'">Éditer</a>
                        {{ include('pathway/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de parcours créés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Fenêtre modale d'ajout #}
    {{ include ('pathway/modal_new.html.twig') }}
    {# Fenêtre modale d'édition #}
    {# {{ include ('pathway/modal_edit.html.twig') }} #}

{% endblock %}
