<div class="modal" id="edit-human-resource-category-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Modifier une catégorie de ressource humaine</h2>
      </div>
      <form action="{{ path('HumanResourceCategoryEdit') }}" method="post">
        <div class="modal-body">
            <input type="hidden" name="idcategoryedit" id="idcategoryedit">
            <div>
                <label for='categoryname'> Nom de la catégorie </label>
                <input required="required" type='text' name='categorynameedit' id='categorynameedit'>
            </div>
            <br>
            <div class="modal-footer">
            <button type="button" class="btn-delete btn-secondary" onclick="hideEditModalForm()">Annuler</button>
            <button type="button" class="btn-consult btn-secondary" onclick="window.location.href='{{ path('index_human_resources') }}'">Consulter les ressources</button>
            <button type="submit" class="btn-valide btn-secondary"> Modifier </button>
            </div>
        </div>
	    </form>
    </div>
  </div>
</div>