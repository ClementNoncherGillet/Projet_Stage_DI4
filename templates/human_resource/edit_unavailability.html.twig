{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/Global/NewCrud.css') }}">
{% endblock %}
<div class="modal" id="edit--unavailability-human-resource-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Gestion des Indisponibilités de<p id = 'human-resource-name-unavailability'> </p></h2>
            </div>
               <form id = "edit-form-resource" action="{{ path('HumanResourceUnavailability') }}" method="post">
                <input name = "id-human-resource-unavailability" id = "human-resource-id-unavailability" style = "display : none">
                <div class="modal-body">
                Début de la nouvelle indisponibilité : <br>
                <input type="datetime-local" name="datetime-begin-unavailability" id="datetime-begin-unavailability"><br>
                Fin de la nouvelle indisponibilité : <br>
                <input type="datetime-local" name="datetime-end-unavailability" id="datetime-end-unavailability"><br>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-delete btn-secondary" onclick="hideEditModalForm()">Annuler</button>
                    <button type='button' onclick="edit__verifyUnavailabilityHuman()" class="btn-consult btn-secondary"> Valider  </button>
                    <button id = 'btn-none-edit-human-unavailability' style = "display : none" type = "submit"></button>
                </div>
                </form>
        </div>
    </div>
</div>