{% extends 'base.html.twig' %}

{% block title %}Liste des ressources{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="js/jquery-ui/external/jquery/jquery.js"></script>
    <script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>
    <script src="{{ asset('JS/Resource/Resource.js') }}"> </script>
    <script src="{{ asset('JS/Resource/EditForm.js') }}"> </script>
{% endblock %}
{% block body %}
<div id="main_content">
<li class="selected" id="resources" onclick="change_tab_human(this.id);">Ressources</li>
<li class="notselected" id="categories" onclick="change_tab_human(this.id);">Catégories</li>
    <script> 
    /* Script permettant de remplir dans le js un tableau qui contient toutes les activités des pathway

        Pour accéder a une activité d'un pathway :
        On a :
        activitiesByPathways.idPathway => id du pathway 
        activitiesByPathways.activities => liste d'activites lié au pathway
        Puis : 
        activitiesByPathways[index du pathway].activities[index de l'activité que l'on cherche].idActivity => id de l'activité
        activitiesByPathways[index du pathway].activities[index de l'activité que l'on cherche].name => nom de l'activité
        activitiesByPathways[index du pathway].activities[index de l'activité que l'on cherche].duration => durée de l'activité
    */  
        var categoriesByResources = new Array();
        {% if (categoriesByResources) %}
            {% for indexResource in 0..(categoriesByResources|length - 1) %}
                categoriesByResources[{{indexResource}}] = new Object();
                {# categoriesByResources[{{indexResource}}].resourceName = '{{ categoriesByResources[indexResource].humanresourcename }}'#} 
                categoriesByResources[{{indexResource}}].categories = new Array();
                {% if (categoriesByResources[indexResource]) %}
                    {% for indexCategory in 0..(categoriesByResources[indexResource]|length - 1) %}
                        categoriesByResources[{{indexResource}}].categories[{{indexCategory}}] = new Object();
                        categoriesByResources[{{indexResource}}].categories[{{indexCategory}}].idCategory = '{{ categoriesByResources[indexResource][indexCategory].id }}'
                        categoriesByResources[{{indexResource}}].categories[{{indexCategory}}].name = '{{ categoriesByResources[indexResource][indexCategory].categoryname }}' 
                    {% else %}
                    {% endfor %}
                {% endif %} 
            {% else %}
            {% endfor %}            
        {% endif %}

        var resourcesByCategories = new Array();
        {% if (resourcesByCategories) %}
            {% for indexCategory in 0..(resourcesByCategories|length - 1) %}
                resourcesByCategories[{{indexCategory}}] = new Object();
                {# resourcesByCategories[{{indexResource}}].resourceName = '{{ resourcesByCategories[indexResource].humanresourcename }}'#} 
                resourcesByCategories[{{indexCategory}}].categories = new Array();
                {% if (resourcesByCategories[indexCategory]) %}
                    {% for indexResource in 0..(resourcesByCategories[indexCategory]|length - 1) %}
                        resourcesByCategories[{{indexCategory}}].categories[{{indexResource}}] = new Object();
                        resourcesByCategories[{{indexCategory}}].categories[{{indexResource}}].idCategory = '{{ resourcesByCategories[indexCategory][indexResource].id }}'
                        resourcesByCategories[{{indexCategory}}].categories[{{indexResource}}].name = '{{ resourcesByCategories[indexCategory][indexResource].humanresourcename }}' 
                    {% else %}
                    {% endfor %}
                {% endif %} 
            {% else %}
            {% endfor %}            
        {% endif %}
    </script> 

<div class = "index" id="both-tables">
<input id = "working-hours-content" style = "display : none" value = "{{workingHours.content}}">
<div id = 'list-human-resources'>
    <h1>Liste des ressources humaines</h1>
        <button class ="btn-add" onclick="showNewHumanModalForm()"> Ajouter une nouvelle ressource humaine </button>
    <table class="table table-striped table-index-users">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% set indexResource = 0 %}
        {% for human_resource in human_resources %}
            {% set categoryArray = [] %}
            {% if (categoriesByResources[indexResource]) %}
                {% for indexCategory in 0..(categoriesByResources[indexResource]|length - 1) %}
					{% set nameCategory = categoriesByResources[indexResource][indexCategory].categoryname %}
				    {% set categoryArray = categoryArray|merge([{'name' : nameCategory}]) %} 
                {% endfor %}
            {% endif %}
            <tr>
                <td>{{ human_resource.id }}</td>
                <td>{{ human_resource.humanresourcename }}</td>
                <td>
                    <button class = "btn-infos btn-secondary" onclick="showInfosModalHuman('{{human_resource.humanresourcename}}', '{{categoryArray|json_encode()}}')">Informations</a>
                    <button class = "btn-edit btn-secondary" onclick="showEditModalForm('{{human_resource.id}}', '{{human_resource.humanresourcename}}', '{{indexResource}}')">Éditer</a>
                    {{ include('human_resource/delete_resource.html.twig') }}
                </td>
            </tr>
            {% set indexResource = indexResource + 1 %}
        {% else %}
            <tr>
                <td colspan="4">Pas de ressources humaines créées !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<br>
 </div>
 <div style = "display : none " id = 'list-human-categories'>
 <h1>Liste des catégories de ressources humaines</h1>
 <button class ="btn-add" onclick="showNewHumanCategModalForm()"> Ajouter une nouvelle catégorie de ressource humaine </button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% set indexCategory = 0 %}
        {% for human_resource_category in human_resources_categories %}
            {% set humanResourceArray = [] %}
            {% if (resourcesByCategories[indexCategory]) %}
                {% for indexResource in 0..(resourcesByCategories[indexCategory]|length - 1) %}
					{% set nameHumanResource = resourcesByCategories[indexCategory][indexResource].humanresourcename %}
				    {% set humanResourceArray = humanResourceArray|merge([{'name' : nameHumanResource}]) %} 
                {% endfor %}
            {% endif %}
            <tr>
                <td>{{ human_resource_category.id }}</td>
                <td>{{ human_resource_category.categoryname }}</td>
                <td>
                    <button class = "btn-infos btn-secondary" onclick="showInfosModalHumanCateg('{{human_resource_category.categoryname}}', '{{humanResourceArray|json_encode()}}')">Informations</a>
                    <button class = "btn-edit btn-secondary"  onclick="showEditHumanCategModalForm('{{ human_resource_category.id }}', '{{ human_resource_category.categoryname }}')">Éditer</a>
                    {{ include('human_resource/delete_category.html.twig') }}

                </td>
            </tr>
            {% set indexCategory = indexCategory + 1 %}
        {% else %}
            <tr>
                <td colspan="3">Pas de catégorie de ressources humaines créées !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
