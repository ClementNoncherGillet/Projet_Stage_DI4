{% extends 'base.html.twig' %}

{% block title %}Liste des ressources{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="js/jquery-3.6.0.js"></script>
    <script src="js/bootstrap/bootstrap.min.js" integrity="sha384-3nhVhzgkAiK+aRAouB5S914cEx9yGFCeToSirPZfaTPyy6g+RbDkzkmojJymfCBY sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 sha256-SUzPu+ewjZCj6CtwVs9sNh6Q/LMFi1w1RZ9TxpKmVkE=" crossorigin="anonymous"></script>
      <script src="{{ asset('JS/Resource/Resource.js') }}"> </script>
{% endblock %}
{% block body %}
<div id="both-tables">
    <h1>Liste des ressources humaines</h1>
        <button class ="btn-add" onclick="showNewModalForm()"> Ajouter une nouvelle ressource humaine </button>
    <table class="table table-striped table-index-users">
        <thead>
            <tr>
                <th>Id</th>
                <th>Humanresourcename</th>
                <th>Available</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for human_resource in human_resources %}
            <tr>
                <td>{{ human_resource.id }}</td>
                <td>{{ human_resource.humanresourcename }}</td>
                <td>{{ human_resource.available ? 'Yes' : 'No' }}</td>
                <td>
                    <button class = "btn-infos btn-secondary" onclick="showInfosModalHuman('{{human_resource.id}}', '{{human_resource.humanresourcename}}', '{{human_resource.available}}')">Infos</a>
                   <button class = "btn-edit btn-secondary" onclick="window.location.href='{{ path('app_human_resource_edit', {'id': human_resource.id}) }}'">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de ressources humaines créées !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<br>
    <h1>Liste des ressources matérielles</h1>
    <button class ="btn-add" onclick="showNewModalForm()"> Ajouter une nouvelle ressource matérielle </button>
    <table class="table table-striped table-index-users">
        <thead>
            <tr>
                <th>Id</th>
                <th>Materialresourcename</th>
                <th>Available</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material_resource in material_resources %}
            <tr>
                <td>{{ material_resource.id }}</td>
                <td>{{ material_resource.materialresourcename }}</td>
                <td>{{ material_resource.available ? 'Yes' : 'No' }}</td>
                <td>
                    <button class = "btn-infos btn-secondary" onclick="showInfosModalMaterial('{{material_resource.id}}', '{{material_resource.materialresourcename}}', '{{material_resource.available}}')">Infos</a>
                   <button class = "btn-edit btn-secondary" onclick="window.location.href='{{ path('app_material_resource_edit', {'id': material_resource.id}) }}'">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de ressources matérielles créées !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{{ include ('human_resource/show.html') }}
{{ include ('material_resource/show.html') }}
{{ include ('human_resource/new.html') }}
{{ include ('material_resource/new.html') }}
{% endblock %}
