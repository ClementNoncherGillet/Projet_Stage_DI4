{% extends 'base.html.twig' %}

{% block title %}Listing des ressources{% endblock %}
{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('CSS/Global/IndexCrud.css') }}">
        {% endblock %}
{% block body %}
    <div id = "index-users">

    <h1>Liste des ressources</h1>
    <button class ="btn-add" onclick="window.location.href='{{ path('app_resource_new') }}'">Ajouter une nouvelle ressource</button>
    <br>
    <table class="table table-striped table-index-users">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>{{ resource.name }}</td>
                <td>
                    <button class = "btn-infos btn-secondary" onclick="window.location.href='{{ path('app_resource_show', {'id': resource.id}) }}'">Infos</a>
                    <button class = "btn-edit btn-secondary" onclick="window.location.href='{{ path('app_resource_edit', {'id': resource.id}) }}'">Éditer</a>
                    {{ include('resource/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de ressources créées !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
