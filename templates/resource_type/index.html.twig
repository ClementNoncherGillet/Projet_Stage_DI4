{% extends 'base.html.twig' %}

{% block title %}ResourceType index{% endblock %}

{% block body %}
    <h1>ResourceType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_type in resource_types %}
            <tr>
                <td>{{ resource_type.id }}</td>
                <td>{{ resource_type.name }}</td>
                <td>{{ resource_type.category }}</td>
                <td>{{ resource_type.type }}</td>
                <td>
                    <a href="{{ path('app_resource_type_show', {'id': resource_type.id}) }}">show</a>
                    <a href="{{ path('app_resource_type_edit', {'id': resource_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resource_type_new') }}">Create new</a>
{% endblock %}
